{% comment %} {% assign button_color = color %}
{% assign button_size = size %}
{% assign button_text = text %} {% endcomment %}

<a
  class="button
  {% if color == "dark" %}
    button--dark
  {% elsif color == "light" %}
    button--light
  {% elsif color == "primary" %}
    button--primary
  {% elsif color == "gradient" %}
    button--gradient
  {% endif %}
  {% if size == "large" %}
    button--large
  {% elsif size == "small" %}
    button--small
  {% endif %}
  {% if border == true %}
    button--border
  {% endif %}

  "
  href="/products/pzaz">
  {% if text %}
    {{ text }}
  {% else %}
    Shop Now
  {% endif %}
</a>