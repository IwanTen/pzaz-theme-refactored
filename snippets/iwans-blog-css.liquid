{% style %}
    :root
    {
      font-size: 16px;
      --pink: hsl(314, 100%, 46%);
      box-sizing: border-box;
      --info-font: 10px / 1.3 "SpaceGrotesk", Helvetica, Helvetica, sans-serif;
      --title-font: 52px / 1.3 var(--font-heading), Helvetica, Helvetica, sans-serif;
      --headline-font: 28px / 1.3 var(--font-heading), Helvetica, Helvetica, sans-serif;
      --fs-200: 0.6rem;
      --fs-300: 0.8rem;
      --fs-400: 1rem;
      --fs-500: 1.2rem;
      --fs-600: 1.4rem;
      --fs-700: 1.6rem;
      --fs-800: 2rem;
      --space-normal: var(--fw-body-regular);
      --space-med: var(--fw-body-medium);
      --space-bold:  var(--fw-body-bold);
    }

    a:link{
    text-decoration: none;
  }

    /*utility classes */

    .img-top {
      object-position: top;
    }


    .img-bottom {
      object-position: center;
    }

    .contain {
      max-width: 950px;
      margin-left: auto;
      margin-right: auto;
      padding: 0.5rem 2rem;
    }

    article {
      background-color: white;
    }
    .zblog-wrapper {
      /* padding:2rem; */
      background: white;
      min-height: 100vh;
      padding-bottom: 2rem;
    }

    .zblog-hero-image__container {
      background-color: yellow;
      min-height: 300px;
      height: 40vh;
    }

    .zblog-hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .zblog-header {
      display: flex;
      flex-direction: row;
      padding: 2rem;
      max-width: 950px;
      margin-left: auto;
      margin-right: auto;
    }

    .zblog-content {
      margin-bottom: 2rem;
    }

    .zblog-content::after {
      content: "";
      display: inline-block;
      vertical-align: middle;
      border-bottom: 2px solid #000;
      height: 2rem;
      width: 33.3%;
      transform: translateX(100%);
    }

    .zblog-content img {
      display: inline-block;
    }

    .zblog-content p {
      padding-bottom: 1rem;
    }

    .zblog-content ul {
      list-style: disc;
      padding-inline: 2rem;
    }

    .zblog-content li {
      list-style: disc;
      padding-block: 0.5rem;
    }

    .zblog-content h1 {
      font-size: var(--fs-800);
      font-family: var(--space-bold);
      margin-bottom: 1rem;
    }
    .zblog-content h2 {
      font-size: var(--fs-700);
      font-family: var(--space-med);
    }
    .zblog-content h3 {
      font-size: var(--fs-600);
      font-family: var(--space-med);
    }

    .zblog-content h1,
    .zblog-content h2 {
      line-height: 3rem
    }


    @media(max-width: 750px) {
      .zblog-header {
        flex-direction: column;
        padding: 2rem;
      }
    }

    .zblog-header-info {
      padding-top: 1rem;
      margin-right: 1rem;
      font: var(--info-font);
      flex-shrink: 0;
      margin-bottom: 1rem;
    }

    .zblog-header-main {}

    .zblog-header-main__title {
      font: var(--title-font);
      font-weight: 800;
      text-transform: uppercase;
    }

    {%- comment -%}
      .zblog-general__subheading {
        font-family: var(--space-med);
        margin-top: 1rem;
      }
    {%- endcomment -%}

    @media(max-width: 450px) {
      .zblog-header-main__title {
        font-size: 36px;
      }
    }

    .zblog-header-main__headline {
      font: var(--headline-font);
      font-size: 2.6rem;
      margin-bottom: 1rem;
    }

    .zblog-header-main__tagline {
      font: var(--headline-font);

    }



    td {
      border-radius: 10px;
      {%- comment -%}
        border-bottom: 2px solid red;
      {%- endcomment -%}
    }
    {%- comment -%}
      tr {
        border-radius: 10px;
        border: 2px solid red;
      }
    {%- endcomment -%}

    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 1em;
      border: 0 2px 4px 6px solid black;
    }

    tr:first-child {
      border-bottom: 3px solid black;
    }

    tr {
      border-bottom: 2px solid black;
    }

    td {
      padding-block: 5px;
    }


    .zblog-content td > p {
      padding-bottom: 0;
    }
    .zblog-content table > p {
      padding-bottom: 0;
    }

    .zblog-content a {
      color: magenta !important;
      text-decoration: underline;
    }

    .zblog-content img {
      border: 3px solid black;
      border-radius: 20px;
      margin: 1rem;
    }

    /*.zblog-content__block {
      padding: 0.5rem 2rem;
    }*/

    /*swiper block styles*/
    .zblog-swiper {
      height: auto;
      max-width: 950px;
      margin-inline: auto;
      background: transparent;
      overflow: hidden;
      padding: 1rem;

    }

    .zblog-swiper__wrapper {
      height: 100%;
      background: transparent;
    }

    .zblog-swiper__slide {
      height: 300px;
      width: 200px;
      border: 3px solid black;
      border-radius: 10px;
      overflow: hidden;
    }

    .zblog-swiper__slide img {
      background-color: blue;
      width: 100%;
      height: 100%;
      object-fit: cover;
      margin: 0;
      border: none;
      border-radius: 0;
    }


    /*more blogs block styles*/

    .zblog-more {
      background-color: white;
      text-decoration:none;
    }

    .zblog-more__title {
      font-family: "drukWide", Helvetica, Helvetica, sans-serif;
      text-align: center;
      margin-bottom: 1rem;
    }

    @media(max-width:450px) {
      .zblog-more__title {
        font-size: 36px;
      }
    }

    .zblog-more__swiper {
      height: auto;
    }

    .zblog-more__swiper-wrapper {
      height: 100%;
    }
    .zblog-more__card {
      height: 100%;
      width: 200px;
    }

    .zblog-more__card-image {
      height: 35vw;
      max-height: 400px;
      border: 3px solid black;
      border-radius: 20px;
      background: grey;
      overflow: hidden;
    }
    .zblog-more__card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border: none;
      border-radius: 0;
    }

    .zblog-more__card-content {
      padding-top: 1rem;
      color: black;
      text-decoration-thickness:0 !important;
    }

    .zblog-more__card-title {
      font-size: var(--fs-base);
      font-weight: var(--fw-heading-bold);
      font-family: var(--font-heading);
      text-decoration: none !important;
      font-style:italic;
      text-transform: uppercase;
      text-decoration-thickness :0 !important;
      text-decoration-color: black;

    }

    .zblog-more__card-headline {
      font-size: var(--fs-300);
      font-family: var(--space-med);
    }

    .zblog-more__card-date {
      font-size: var(--fs-200);
    }

    /*Callout Styles*/

    .zblog-callout {
      max-width: calc(950px - 4rem);
      margin-inline: auto;
      padding: 2rem;
      height: 400px auto;
      background-color: black;
      text-align: center;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .zblog-callout__inner {
      width: 100%;
      padding: 1rem;
      border-radius: 4px;
      background: yellow;
      display: flex;
      flex-direction: column;
      align-items: center;
      -moz-box-flex: 1;
      -webkit-flex: 1;
      -moz-flex: 1;
      -ms-flex: 1;
      flex: 1 0 100%;
    }

    .zblog-callout__inner p {
      padding-inline: 5rem;
    }

    .zblog-callout-title {
      font-family: "drukWide", Helvetica, Helvetica, sans-serif;
    }

    @media(max-width:450px) {
      .zblog-callout-title {
        font-size: 36px;
      }
      .zblog-callout__inner p {
        padding-inline: 0;
      }
    }

    .zblog-callout__divider {
      display: block;
      border-bottom: 2px dashed;
      width: 80%;
      margin: 1rem;
    }

    .zblog-callout a {
      color: black !important;
    }

    /*Learn1 Styles*/

    .zblog-learn {
      /* min-height: 400px; */
      height: 300px auto;
      border: 3px solid black;
      border-radius: 20px;
      overflow: hidden;
      background-color: yellow;
      display: grid;
      grid-auto-columns: max-content;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    @media(max-width: 750px) {}

    .zblog-learn__image {
      width: 100%;
      min-width: 100%;
    }

    .zblog-learn__image img {
      width: 200px;
      height: auto;
      object-fit: cover;
      margin: 0;
    }
    .zblog-learn__content {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 100%;
    }
    .zblog-learn-title {
      font-family: "drukWide", Helvetica, Helvetica, sans-serif;
      font-size: 4vw;
    }

    .zblog-learn-text {}

    .zblog-learn-button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 1rem;
      border-radius: 10px;
      border: 2px solid black;
      background-color: var(--pink);
      font-family: "SpaceGroteskBold";
    }

    #MainContent {
      padding-top: 0 !important;
    }

    /*BLOG POPUP STYLING*/

    .zblog-main {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      grid-gap: 20px;
      align-items: stretch;
      {%- comment - %}
        padding: 0 !important;
      {%- endcomment - %}
      overflow: visible !important;
    }

    .blog-main__card {
      height: auto;
    }

    .zblog-main__card-image {
      width: 100%;
      aspect-ratio: 1 / 1;
      overflow: hidden;
      border: 3px solid black;
      border-radius: 20px;
      overflow: hidden;
    }
    .zblog-main__card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
{% endstyle %}
